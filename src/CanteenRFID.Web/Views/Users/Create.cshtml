@model User
<h2>Benutzer anlegen</h2>
<form method="post">
    <div class="mb-3">
        <label class="form-label">Vorname</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Nachname</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Personalnummer</label>
        <input asp-for="PersonnelNo" class="form-control" />
        <span asp-validation-for="PersonnelNo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Token-ID</label>
        <input asp-for="TokenId" class="form-control" />
        <span asp-validation-for="TokenId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">UID</label>
        <input asp-for="Uid" class="form-control" />
        <span asp-validation-for="Uid" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="form-check-label">Aktiv</label>
    </div>
    <button class="btn btn-primary" type="submit">Speichern</button>
</form>
