@{
    ViewData["Title"] = "Dashboard";
}
<div class="row mb-3">
    <div class="col">
        <div class="card"><div class="card-body"><h5 class="card-title">Benutzer</h5><p class="display-6">@ViewBag.TotalUsers</p></div></div>
    </div>
    <div class="col">
        <div class="card"><div class="card-body"><h5 class="card-title">Reader</h5><p class="display-6">@ViewBag.TotalReaders</p></div></div>
    </div>
</div>
<h4>Heute</h4>
<div class="row">
    @foreach(var item in ViewBag.TodayCounts){
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="fw-bold">@item.MealType</div>
                    <div class="display-6">@item.Count</div>
                </div>
            </div>
        </div>
    }
</div>
